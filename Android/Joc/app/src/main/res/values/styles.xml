<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="gradient_blue">
        <item name="android:background">@drawable/gradient_blue</item>
    </style>

    <style name="gradient_green">
        <item name="android:background">@drawable/gradient_green</item>
    </style>

    <style name="gradient_purple">
        <item name="android:background">@drawable/gradient_purple</item>
    </style>

    <style name="gradient_red">
        <item name="android:background">@drawable/gradient_red</item>
    </style>

    <style name="bck_imgs">
        <item name="android:background">@drawable/back_imgs</item>
    </style>

    <style name="bck_imgs_green">
        <item name="android:background">@drawable/back_imgs_green</item>
    </style>

    <style name="text_input_layout">
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="text_input_edit_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:inputType">text</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">25dp</item>
    </style>

    <style name="btn_gradient">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/rounded_gradient</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="btn_go_back">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:background">@color/none</item>
    </style>

    <style name="lbl_option_question">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">48dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">30dp</item>
    </style>

    <style name="btn_green_back">
        <item name="android:layout_width">125dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/gradient_green</item>
    </style>

    <style name="btn_blue_back">
        <item name="android:layout_width">125dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/gradient_blue</item>
    </style>

    <style name="btn_purple_back">
        <item name="android:layout_width">125dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/gradient_purple</item>
    </style>

    <style name="btn_red_back">
        <item name="android:layout_width">125dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/gradient_red</item>
    </style>

    <style name="roundImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">11dp</item>
        <item name="color">@color/none</item>
    </style>

</resources>