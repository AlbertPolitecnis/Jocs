<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/zelda"
    tools:context=".Activities.GamesListActivity">

    <ImageButton
        android:id="@+id/BtnGoBackGamesList"
        android:src="@drawable/ic_baseline_arrow_back_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/btn_go_back" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/LstGames"
        android:layout_width="350dp"
        android:layout_height="620dp"
        android:layout_marginTop="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/BtnGoBackGamesList" />

</androidx.constraintlayout.widget.ConstraintLayout>